<project name="project" default="default">
	<description>
            Build Common Message API
    </description>

	<property name="dir.src" value="src" />
	<property name="dir.lib" value="lib" />
	<property name="dir.src.dao" value="${dir.src}/com/hqsolution/hqserver/app/dao" />
	<property name="dir.build" value="build" />
	<property name="dir.dist" value="../HQServer/dist" />

	<path id="buildClasspath">
		<fileset dir="${dir.lib}">
			<include name="*.jar" />
		</fileset>

		<pathelement location="${build.dir}" />
	</path>

	<target name="cleanCommonFiles">
		<delete dir="${dir.build}" />
	</target>

	<!-- Creates the output directories -->
	<target name="prepareCommonFiles" depends="cleanCommonFiles">
		<mkdir dir="${dir.build}" />
	</target>

	<target name="buildCommonFiles" depends="prepareCommonFiles">
		<javac srcdir="${dir.src.dao}" destdir="${dir.build}">
			<classpath refid="buildClasspath" />
		</javac>
	</target>

	<target name="buildJarCommonFiles" depends="buildCommonFiles">
		<jar jarfile="${dir.dist}/common_file.jar" basedir="${dir.build}" />
	</target>


	<!-- ================================= 
          target: default              
         ================================= -->
	<target name="default" depends="depends" description="description">
		<antcall target="buildJarCommonFiles">
		</antcall>
	</target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: depends                      
         - - - - - - - - - - - - - - - - - -->
	<target name="depends">
	</target>

</project>
